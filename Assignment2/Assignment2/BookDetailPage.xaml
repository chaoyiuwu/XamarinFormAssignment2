<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment2.BookDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding CurrentBook.Title}" FontSize="Large" HorizontalTextAlignment="Center"/>

            <StackLayout Orientation="Horizontal" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
                <Image Source="{Binding CurrentBook.CoverUrl}" HeightRequest="150" WidthRequest="150"/>
                <Label Text="{Binding CurrentBook.AuthorNameLong}" FontSize="Large"/>
            </StackLayout>
            <Button x:Name="SeeMoreButton" Text="See more about this book" Clicked="SeeMoreButton_Clicked" HorizontalOptions="Center"></Button>
            <Button x:Name="AddToListButton" Text="Add to list" Clicked="AddToListButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>